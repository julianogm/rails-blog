<div class="col-md-8">
  <h2 class="pb-2 mt-4">
    <%= @blog.title %>
  </h2>

  <nav class="breadcrumb">
    <%= link_to t('blog.home'), root_path, class: "breadcrumb-item" %>
    <%= link_to @blog.topic.title, topic_path(@blog.topic), class: "breadcrumb-item" %>
    <span class="breadcrumb-item active"><%= @blog.title %></span>

    <span class="ms-auto">
      <%= link_to fa_icon('pencil'), edit_blog_path(@blog), class: 'me-2' if logged_in?(:site_admin) %>
      <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure? '}, class: 'me-2' if logged_in?(:site_admin) %>
    </span>
  </nav>

  <p>
    <%= markdown @blog.body %>
  </p>

  <%= render 'comments/comments_form' %>
  <div id='comments' data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>